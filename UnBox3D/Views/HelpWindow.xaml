<Window x:Class="UnBox3D.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnBox3D.Views"
        mc:Ignorable="d"
        Title="Help — UnBox3D"
        Height="600" Width="800"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource SurfaceBrush}">

    <!-- ScrollViewer allows the help content to scroll if it's longer than the window -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>

            <!-- Title -->
            <TextBlock Text="UnBox3D — Help"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <!-- Program Description -->
            <TextBlock Text="UnBox3D is a 3D visualization and modeling tool that allows users to load, view, and interact with 3D objects in real time. You can navigate the 3D scene, adjust settings, and customize your workspace using both the mouse and keyboard shortcuts."
                       TextWrapping="Wrap"
                       FontSize="14"
                       Margin="0 0 0 20"/>

            <!-- Keybinds Section -->
            <TextBlock Text="Keyboard Shortcuts" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Margin="0 0 0 10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Enter" Grid.Row="0" Grid.Column="0" Margin="0 5"/>
                <TextBlock Text="Start rendering / begin session" Grid.Row="0" Grid.Column="1" Margin="0 5"/>

                <TextBlock Text="Alt + O" Grid.Row="1" Grid.Column="0" Margin="0 5"/>
                <TextBlock Text="Open project file" Grid.Row="1" Grid.Column="1" Margin="0 5"/>

                <TextBlock Text="Alt + S" Grid.Row="2" Grid.Column="0" Margin="0 5"/>
                <TextBlock Text="Open settings window" Grid.Row="2" Grid.Column="1" Margin="0 5"/>

                <TextBlock Text="Esc" Grid.Row="3" Grid.Column="0" Margin="0 5"/>
                <TextBlock Text="Exit current view or close dialog" Grid.Row="3" Grid.Column="1" Margin="0 5"/>

                <TextBlock Text="Alt + F4" Grid.Row="4" Grid.Column="0" Margin="0 5"/>
                <TextBlock Text="Close the application" Grid.Row="4" Grid.Column="1" Margin="0 5"/>
            </Grid>


            <!-- Tips -->
            <TextBlock Text="Tip: Use mouse drag and scroll wheel to navigate the 3D scene." 
                       FontSize="13" 
                       Opacity="0.7" 
                       Margin="0 20 0 0"/>

            <!-- Button row -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Back to Main Menu" Width="160" Margin="0 0 10 0" Click="Back_Click"/>
                <Button Content="Close" Width="100" Click="Close_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
